<%= render("layouts/errors", :object => @route) %>

<%= form_for(@route) do |f| %>
  <div class='form-group'>
    <%= f.label :name%>
    <%= f.text_field :name %>
  </div>
   <div class ='form-group'>
    <%= f.collection_check_boxes :location_ids, Location.all, :id, :name, {:item_wrapper_class => 'checkbox_container'}%>
  </div>
  <%= f.submit(:class => "btn btn-info") %>
<% end %>
