<%= render("layouts/errors", :object => @stop) %>

<%= form_for(@stop) do |f| %>
  <div class='form-group'>
    <%= f.collection_check_boxes :ca_ids, Category.all, :id, :name %>
    <%= f.collection_select :location_id, Location.all, :id, :name %>
  </div>
  <div class='form-group'>
    <%= f.collection_select :route_id, Route.all, :id, :name %>
  </div>
  <%= f.submit(:class => "btn btn-info") %>
<% end %>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
