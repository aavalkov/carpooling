<h1>Carpooling</h1>

<div class="row">
  <div class="col-md-6">
    <h3>Locations:</h3>
    <ul>
    <% @locations.each do |location|%>
      <li><%= link_to "#{location.name}", location_path(location) %></li>
    <% end %>
    </ul>

    <h3>Routes:</h3>
    <ul>
    <% @routes.each do |route|%>
      <li><%= link_to "#{route.name}", route_path(route) %></li>
      <% end %>
    </ul>
  </div>

  <div class= "col-md-6">
    <div class="alchemy" id="alchemy"></div>
    <script type="text/javascript">
      var config = {
          dataSource: <%= @data.html_safe%>,
          graphHeight: function(){ return 300; },
          graphWidth: function(){ return 300; },
          curvedEdges: function(){ return true; }
          };
      alchemy.begin(config)
    </script>
  </div>
</div>

<footer>
  <%= link_to 'New Location', new_location_path, :class => 'btn btn-info'%>
  <%= link_to 'New Route', new_route_path, :class => 'btn btn-success'%>
</footer>

